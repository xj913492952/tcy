<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_bar"
                android:background="@color/colorPrimary">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toRightOf="@+id/ivBack"
                    android:background="@drawable/edittext_login"
                    android:gravity="bottom"
                    android:hint="微信号/QQ号/手机号"
                    android:paddingBottom="10dp"
                    android:paddingLeft="46dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#484c4c"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignBottom="@id/et_search"
                    android:layout_alignLeft="@id/et_search"
                    android:layout_margin="8dp"
                    android:src="@android:drawable/ic_search_category_default" />

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/et_search"
                    android:layout_alignRight="@+id/et_search"
                    android:layout_alignTop="@+id/et_search"
                    android:layout_marginEnd="42dp"
                    android:layout_marginRight="42dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_search"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_find"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/a_a" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_find"
                    android:text="搜索:"
                    android:textColor="#353535"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_temp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="13830140218"
                    android:textColor="#3FB838"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#DBDBDB" />
        </LinearLayout>

    </ScrollView>
</layout>